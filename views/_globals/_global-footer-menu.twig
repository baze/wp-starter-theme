<nav class="_global-footer-navigation" role="navigation">
    <ul>
        {% for item in secondary_menu.get_items %}
            <li class="{{ item.classes | join(' ') }}"><a href="{{ item.get_link }}">{{ item.title }}</a>
                {% if item.get_children %}
                    <ul>
                        {% for child in item.get_children %}
                            <li><a href="{{ child.get_link }}">{{ child.title }}</a></li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</nav>