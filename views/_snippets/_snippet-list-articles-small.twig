<ul class="list-articles">
    {% for event in events %}
        <li class="list-articles-columns list-articles-columns-{{ columns }}">
            <article>
                <h4><a href="{{ event.link }}">{{ event.post_title }}</a></h4>

                <p>{{ event.post_excerpt }}</p>
            </article>
        </li>
    {% endfor %}
</ul>