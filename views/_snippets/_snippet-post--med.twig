<article class="post--med post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
    <section class="article-content">
        <header class="post-header">
            <h1><a href="{{ post.link }}">{{ post.post_title }}</a></h1>

            <p class="blog-author">{{ post.display_date }}</p>
        </header>

        <div class="post-body">
            {{ post.post_excerpt }}
        </div>

        <div class="post-footer">
            {% include('_snippets/_snippet-button.twig') with {'type': 'secondary', 'label': _e('Read more'), 'url': post.link} %}
        </div>
    </section>

</article>