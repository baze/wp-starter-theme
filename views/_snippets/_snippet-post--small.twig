<article class="post--small">
    <div class="post-image">
        <img src="{{ TimberImage(post.get_thumbnail | default(placeholder())) }}" alt=""/>
    </div>

    <div class="post-body">
        <header class="post-header">
            <h4><a href="{{ post.link }}">{{ post.post_title }}</a></h4>
            <h5>{{ post.display_date }}</h5>
        </header>

        <p>{{ post.post_excerpt }}</p>

        <div class="post-footer">
            {% include('_snippets/_snippet-button.twig') with {'type': 'primary', 'label': buttonText, 'url': post.link} %}
        </div>
    </div>
</article>