<article class="_snippet-event event event--small">
    <header class="event-header">
        <h4><a href="{{ event.link }}">{{ event.post_title }}</a></h4>
    </header>

    <div>

        <div class="event-body">
            {{ event.get_field('event-start')|date("Y/m/d") }} â€“ {{ event.get_field('event-time') }}<br>
            {{ event.get_field('event-location') }}
        </div>

        <div class="event-footer">
            {% set relations = TimberPost(event.get_field('sign_up_page')) %}
            {% include('_snippets/_snippet-button.twig') with {'type': 'primary', 'label': buttonText, 'url': relations[0].link} %}
        </div>
    </div>
</article>