<article class="post--full post-type-{{ post.post_type }}" id="post-{{ post.ID }}
{% if post.get_thumbnail %}
has-image
{% endif %}
">
    <section class="article-content">

        {% if post.get_thumbnail %}
            <div class="post-image">
                <img src="{{ TimberImage(post.get_thumbnail | default(placeholder(100,100))) }}" alt=""/>
            </div>
        {% endif %}

        <header class="post-header">
            <h1>{{ post.post_title }}</h1>

            <p class="blog-author">{{ post.display_date }}</p>
        </header>

        <div class="post-body">
            {{ post.content }}
        </div>
    </section>

</article>