<article class="tease tease-{{post.post_type}}">
	{% block content %}
		<h2 class="h2">Name: <a href="{{post.get_path}}">{{post.title}}</a></h2>
		<p>{{ post.get_field('jobtitle') }}</p>
		<p>{{post.get_preview}}</p>

		{% if post.get_thumbnail %}
			<img src="{{post.get_thumbnail.get_url}}" />
		{% endif %}
	{% endblock %}
</article>